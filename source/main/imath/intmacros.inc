; *****************************************************************************
;
;								set top of stack
;
; *****************************************************************************

settos	.macro
		lda 	#$80 						; set type
		sta 	esType,x
		lda 	#(\1) & $FF 				; set integer value.
		sta 	esInt0,x
		lda 	#((\1) >> 8) & $FF
		sta 	esInt1,x
		lda 	#((\1) >> 16) & $FF
		sta 	esInt2,x
		lda 	#((\1) >> 24) & $FF
		sta 	esInt3,x
		.endm

; *****************************************************************************
;
;							set second value on stack
;
; *****************************************************************************

settos2 .macro
		inx 								; its only for testing code.
		settos 	\1
		dex
		.endm